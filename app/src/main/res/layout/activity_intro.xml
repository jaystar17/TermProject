<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:layout_editor_absoluteX="8dp"
    tools:layout_editor_absoluteY="8dp">

    <TextView
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:layout_gravity="center"
        android:layout_marginTop="30dp"
        android:background="#0c2288"
        android:textColor="#ffffff"
        android:text="날짜"
        android:textAlignment="center"
        android:textSize="24sp" />

    <Button
        android:id="@+id/date_button"
        android:layout_width="190dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:onClick="OnClickHandler"
        android:layout_marginBottom="10dp"
        android:text="날짜를 선택해주세요" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:weightSum="10">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="20dp">
            <Button
                android:id="@+id/trainBtn"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:text="기차"
                android:layout_marginRight="10dp"
                android:onClick="setTrain">
            </Button>
            <Button
                android:id="@+id/busBtn"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:text="버스"
                android:layout_marginLeft="10dp"
                android:onClick="setBus">
            </Button>
        </LinearLayout>
        <TextView
            android:layout_width="200dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:background="#0c2288"
            android:textColor="#ffffff"
            android:text="출발"
            android:textAlignment="center"
            android:textSize="24sp" />

        <Button
            android:id="@+id/depbutton"
            android:layout_width="190dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:onClick="SelectdepStation"
            android:layout_marginBottom="10dp"
            android:text="출발지를 선택해주세요" />

        <TextView
            android:layout_width="200dp"
            android:layout_height="40dp"
            android:background="#0c2288"
            android:textColor="#ffffff"
            android:text="도착"
            android:textSize="24sp"
            android:textAlignment="center"
            android:layout_gravity="center"/>

        <Button
            android:id="@+id/arrbutton"
            android:layout_width="190dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:onClick="SelectarrStation"
            android:layout_marginBottom="10dp"
            android:text="도착지를 선택해주세요" />

        <TextView
            android:layout_width="200dp"
            android:layout_height="40dp"
            android:background="#0c2288"
            android:textColor="#ffffff"
            android:text="종류"
            android:textSize="24sp"
            android:textAlignment="center"
            android:layout_gravity="center"/>

        <Button
            android:id="@+id/train"
            android:layout_width="190dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:onClick="SelectTrain"
            android:layout_marginBottom="10dp"
            android:text="종류를 선택해주세요" />



        <Button
            android:id="@+id/button"
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:text="search"
            android:textSize="12sp"
            android:textAlignment="center"
            android:layout_gravity="center"
            android:onClick="mOnClick"/>

    </LinearLayout>

</LinearLayout>